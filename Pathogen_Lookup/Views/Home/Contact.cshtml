@using Pathogen_Lookup.Controllers
@{
    var action = "none";
    if (IsPost)
    {
        action = "POST";
        var type = Request["pathogen_name"];
        var url = Request["URL"];
        if (type != null && url != null)
        {
            Pathogen_Lookup.Controllers.HomeController.PathogenTypeDB.Add(
                new PathogenType { Type = type, URL = url });
        }
    }
}

<div class="container">
    <br>
    <h1>Backend System</h1>
    <hr>

    <form class="" action="" method="POST">
        <div class="form-group">
            <label>Pathogen Type</label>
            <input name="pathogen_name" type="text" class="form-control" placeholder="i.e. Salmonella Bacteria">
        </div>
        <div class="form-group">
            <label>URL</label>
            <input name="URL" type="text" class="form-control" placeholder="Enter URL here">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>

    </form>

    <hr>

    <h1>Data</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Pathogen Type</th>
                <th scope="col">URL</th>
            </tr>
        </thead>
        <tbody>

            @foreach(PathogenType item in Pathogen_Lookup.Controllers.HomeController.PathogenTypeDB)
            {
                <tr>
                    <td>@item.Type</td>
                    <td>@item.URL</td>
                </tr>
            }
        </tbody>

    </table>

